{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "plugin"],
    "declaration": true,
    "emitDeclarationOnly": true,
  },
  "include": ["plugin/**/*", "temp/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
